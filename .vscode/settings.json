{
    "files.eol": "\n",
    "cSpell.customDictionaries": {
        "custom-dictionary-linux": {
            "name": "custom-dictionary-linux",
            "path": "${workspaceFolder}/.cspell/custom-dictionary-linux.txt",
            "addWords": true,
            "scope": "workspace"
        },
        "custom-dictionary-project": {
            "name": "custom-dictionary-project",
            "path": "${workspaceFolder}/.cspell/custom-dictionary-project.txt",
            "addWords": true,
            "scope": "workspace"
        }
    },
    "markdown.preview.breaks": true,
    "markdown-pdf.breaks": true,
    "python.formatting.provider": "black",
    "[python]": {
        "editor.defaultFormatter": null, // Prettier を使わないようにする
        "editor.formatOnSave": true // ファイル保存時に自動フォーマット
    },
    "shellcheck.customArgs": [
        "-x"
    ]
}
